<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.example.study.ui.play.PlayViewModel" />

        <variable
            name="info"
            type="com.example.study.net.StudiedRsp.Data" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.play.PlayActivity">

        <cn.jzvd.JzvdStd
            android:id="@+id/jz_video_study"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/cl_card_course"
            layout="@layout/card_course"
            app:info="@{info}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_play_study"
            adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_card_course"
            tools:listitem="@layout/item_play_study" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>